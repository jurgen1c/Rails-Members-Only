<div class="column is-half">
  <% if member_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is=64x64">
          <%= gravatar_image_tag(current_member.email, size: 64, alt: current_member.name) %>
        </p>
      </figure>
      <div class="media-content">
        <%= render 'posts/form' %>
      </div>
    </article>
  <% end %>

  <% @posts.each do |post| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(post.member.email, size: 64, alt: post.member.name) %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p><%= post.post %></p>
            <% if member_signed_in? %>
              <strong><%= post.member.name %> </strong><br />
            <% end %>
            <p class="date_created">Created at: <%= post.created_at.to_s[0..-5] %> </p>
          </div>
          <% if member_signed_in? && current_member.id == post.member_id %>
            <nav class="level is-mobile">
              <div class="level-left">
                <%= link_to post, class: "level-item" do %>
                  <span class="icon is-small"><i class="fa fa-reply"></i></span>
                <% end %>
                <%= link_to edit_post_path(post), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>

</div>

